{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "lint-script: Lint & fix .vue files",
            "type": "npm",
            "script": "lint",
            "path": "ui/",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "lint-style: Lint & fix <style> tags inside .vue",
            "type": "npm",
            "script": "lint:style",
            "path": "ui/",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "docs: Build documentation files",
            "type": "npm",
            "script": "build:docs",
            "path": "ui/",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "e2e: Run e2e tests with Cypress",
            "type": "npm",
            "script": "test:e2e",
            "path": "ui/",
            "group": "test",
            "problemMatcher": [],
            "presentation": {
                "reveal": "never",
                "panel": "new"
            }
        },
        {
            "label": "todo: Parse @todos and build TODO.md",
            "type": "npm",
            "script": "todo",
            "path": "ui/",
            "problemMatcher": [],
            "presentation": {
                "reveal": "never",
                "panel": "new"
            }
        }
    ]
}